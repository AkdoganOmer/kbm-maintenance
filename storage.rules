rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Tüm kullanıcılar okuyabilir, sadece giriş yapmış kullanıcılar yazabilir
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Ünite dosyaları için özel kurallar
    match /units/{galleryId}/{unitId}/{type}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
} 